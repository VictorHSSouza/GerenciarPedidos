@inherits LayoutComponentBase
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="d-flex align-items-center justify-content-between w-100">
                <div class="d-flex align-items-center">
                    <i class="bi bi-box-seam text-primary me-2 fs-5"></i>
                    <span class="fw-semibold text-dark">Sistema de Pedidos</span>
                </div>
                <div class="d-flex align-items-center gap-3">
                    <span class="badge bg-primary">v1.0</span>
                    <small class="text-muted">@DateTime.Now.ToString("dd/MM/yyyy")</small>
                </div>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
